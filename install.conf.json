[{
    "defaults": {
      "link": {
        "create": true,
        "relink": true,
        "force": true
      }
    }
  },
  {
    "clean": [
      "~",
      "~/.config"
    ]
  },
  {
    "link": {
      "~/.config/fish/local.fish": "config/fish/local.fish",
      "~/.config/fish/env/local.fish": "config/fish/env/local.fish",
      "~/.config/fish/aliases/local.fish": "config/fish/aliases/local.fish",
      "~/.gitconfig_local": "gitconfig_local"
    }
  },
  {
    "shell": [{
      "command": "git submodule update --init --recursive",
      "description": "Installing/updating submodules"
    }]
  }
]
